<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:elevation="6dp"
        android:background="#3f3f3e"
        android:id="@+id/tab_layout"
        android:fillViewport="false"
        />

    <com.example.avinash.vlcremote.viewpager2 android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout"
        android:id="@+id/pager"
        android:elevation="15dp"
        >

    </com.example.avinash.vlcremote.viewpager2>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:id="@+id/rel"></RelativeLayout>

</RelativeLayout>