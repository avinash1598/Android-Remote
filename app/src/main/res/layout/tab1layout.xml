<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rellyt"
    android:background="@drawable/bac">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton2"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher_move"
        android:background="@drawable/button_shape"
        android:layout_alignBottom="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3"
        android:onClick="move" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:background="@mipmap/ic_launcher_play"
        android:contextClickable="true"
        android:clickable="true"
        android:onClick="play"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton4"
        android:src="@mipmap/ic_launcher_back2"
        android:background="@drawable/button_shape"
        android:onClick="back"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="CONNECT"
        android:id="@+id/button2"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:drawableRight="@drawable/ic_action_connect"
        android:background="#25252a"
        android:textColor="#faf6f6"
        android:alpha="0.5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ipaddr"
        android:hint="IP Address"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:textAlignment="center" />


</RelativeLayout>